@model PagedModel<CommunityListItemModel>
<div class="search-result-table">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>序号</th>
                <th>所属省份</th>
                <th>城市</th>
                <th>区域</th>
                <th>楼宇</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @{
                var startNo = Model.PagingResult.PageIndex * Model.PagingResult.PageSize + 1;
                for (int i = 0; i < Model.Items.Count; i++)
                {
                    var item = Model.Items[i];
                <tr model-field-entry="Id:@item.Id,ProvinceId:@item.ProvinvceId,CityId:@item.CityId,CountyId:@item.CountyId,Longitude:@item.Longitude,Latitude:@item.Latitude,FirstLetter:'@item.FirstLetter'">
                    <td>@(startNo + i)</td>
                    <td>@item.ProvinceName</td>
                    <td>@item.CityName</td>
                    <td>@item.CountyName</td>
                    <td model-field="Name">@item.Name</td>
                    <td>
                        <a href="#myModal" command-name="editCommunity">编辑</a>
                        <a href="javascript:;" command-name="deleteCommunity">删除</a>
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>
</div>

<div class="search-result-pagination">
    @Html.Partial("_Pager", Model.PagingResult)
</div>
