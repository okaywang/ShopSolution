@model PagedModel<CustomerModel>
<div class="search-result-table">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>序号</th>
                <th>姓名</th>
                <th>手机号码</th>
                <th>注册时间</th>
                <th>历史订单</th>
                <th>累计可返现</th>
                <th>返现次数</th>
                <th>消费详情</th>
                <th>操作返现</th>                
            </tr>
        </thead>
        <tbody>
            @{
                var startNo = Model.PagingResult.PageIndex * Model.PagingResult.PageSize + 1;
                for (int i = 0; i < Model.Items.Count; i++)
                {
                    var item = Model.Items[i];
                <tr>
                    <td>@(startNo + i)</td>
                    <td>@item.Name</td>
                    <td>@item.PhoneNumber</td>
                    <td>xx.x.xx</td>
                    <td>@item.OrderHeadCounts</td>
                     <td>100000</td>
                     <td>@item.CashBack</td>
                     <td><a href="/Order/CustomerOrders?CustomerId=@item.Id">消费详情</a></td>                    
                    <td> 
                        
                        <a href="javascript:;">返现</a>
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>
</div>

<div class="search-result-pagination">
    @Html.Partial("_Pager", Model.PagingResult)
</div>
