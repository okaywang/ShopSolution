@model PagedModel<SkuCategoryItemModel>
<div class="search-result-table">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>序号</th>
                <th>商品分类</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @{
                var startNo = Model.PagingResult.PageIndex * Model.PagingResult.PageSize + 1;
                for (int i = 0; i < Model.Items.Count; i++)
                {
                    var item = Model.Items[i];
                <tr model-field-entry="@item.Id">
                    <td>@(startNo + i)</td>
                    <td>
                        <a href="@Url.Action("Type", new {cid=item.Id })">@item.Name <span class="badge">@item.TypeCount</span></a>
                    </td>
                    <td>
                        <a href="javascript:;">编辑</a>
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>
</div>

<div class="search-result-pagination">
    @Html.Partial("_Pager", Model.PagingResult)
</div>
